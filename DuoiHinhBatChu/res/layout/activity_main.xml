<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_maind"
    tools:context="com.nvd.duoihinhbatchu.MainActivity" >

    <com.google.android.gms.ads.AdView
        android:id="@+id/adView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        ads:adSize="BANNER"
        ads:adUnitId="ca-app-pub-1395380684132176/9741513842" />

    <LinearLayout
        android:id="@+id/layout_hetder"
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:layout_marginTop="7dp"
        android:orientation="horizontal" >

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="4dp"
            android:layout_weight="1"
            android:gravity="center" >

            <Button
                android:id="@+id/btn_on_Volume"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/loa_on"
                android:padding="2dp" />

            <Button
                android:id="@+id/btn_off_Volume"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:background="@drawable/loa_of"
                android:padding="2dp" />
        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:width="0dp" />

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center" >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:src="@drawable/ic_circular" />

            <TextView
                android:id="@+id/btn_lv_main"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="1"
                android:textSize="17dp"
                android:textStyle="bold" />
        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:width="0dp" />

        <Button
            android:id="@+id/btn_information"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="4dp"
            android:layout_weight="1"
            android:background="@drawable/ic_info"
            android:padding="2dp"
            android:visibility="visible" />
    </LinearLayout>

    <Button
        android:id="@+id/btn_stargame"
        android:layout_width="140dp"
        android:layout_height="50dp"
        android:layout_above="@+id/btn_huongdan"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="5dp"
        android:background="@drawable/btn_start_game"
        android:text="Bắt Đầu Chơi" />

    

    <Button
        android:id="@+id/btn_huongdan"
        android:layout_width="140dp"
        android:layout_height="50dp"
        android:layout_above="@+id/layout_chucnang"
        android:layout_alignLeft="@+id/btn_stargame"
        android:layout_marginBottom="20dp"
        android:background="@drawable/btn_start_game"
        android:text="Hướng Dẫn " />

    <RelativeLayout
        android:id="@+id/layout_chucnang"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="50dp" >

        <Button
            android:id="@+id/btn_share"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:background="@drawable/share"
            android:visibility="invisible" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:background="@drawable/informatioon"
            android:visibility="invisible" />
    </RelativeLayout>

</RelativeLayout>